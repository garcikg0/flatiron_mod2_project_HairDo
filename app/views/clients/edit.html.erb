<h1>Edit Profile</h1>


<% if @errors %>
  <p style="color:red;">The following errors prevented the user from being Updated</p>
  <ul>
    <% @errors.each do |error| %>
      <li><p style="color:red"><%= error %></p></li>
  <% end %>
</ul>
<% end %>


<div class="container">
  <div class="row justify-content-center">
      <div class="col-10">
<%= form_with model: @client do |f| %>
<div class="form-group row">
  <%= f.label :name, class: "col-2 col-form-label text-light" %>
  <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your name" %>
  </div>
</div>
<div class="form-group row">
<%= f.label :age, class: "col-2 col-form-label text-light" %>
<div class="col-10">
<%= f.number_field :age,  class: "form-control shadow rounded", placeholder: "Enter age" %>
</div>
</div>

<div class="form-group row">
  <%= f.label :email, class: "col-2 col-form-label text-light" %>
  <div class="col-10">
    <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :password, class: "col-2 col-form-label text-light" %>
  <div class="col-10">
    <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
  </div>
</div>
<div class="form-group row justify-content-center">
          <%= f.submit "Update Account", class:"btn btn-outline-success" %>
        </div>
        </div>
          </div>
            </div>


      <% end %>
