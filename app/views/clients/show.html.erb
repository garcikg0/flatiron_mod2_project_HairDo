<h1>Hey <%= @client.name.capitalize %></h1>
<p>Name: <%= @client.name %></p>
<p>Age: <%= @client.age %></p>

<% if logged_in? && current_client == @client %>

<h2>My Appointments</h2>
<ul>
<% @client.appointments.each do |appointment| %>
<li>
<%= appointment.stylist.name %> on <%= appointment.appt.strftime("%B %d,%Y at %I:%M %p") %>
</li>
<% end %>
</ul>


<a class="btn btn-primary" href=<%= "/clients/#{@client.id}/edit" %> role="button">Edit Profile</a>

  <%= button_to "Delete Profile", "/clients/#{@client.id}", method: :delete, data: {confirm: "This action is irreversible. Are you sure?"} %>
<% end %>
