<h2>Edit Profile</h2>
<hr>
<%= form_for @stylist do |f|%>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :age %><br>
    <%= f.number_field :age %>
    <br>
    <%= f.label :years_of_practice %><br>
    <%= f.number_field :years_of_practice %>
    <br>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
    <br>
    <%= f.label :licenses %><br>
    <%= f.text_field :licenses %>
    <br>
    <%= f.label :city_id %><br>
    <%= f.collection_select :city_id, City.all, :id, :name %>
    <br>
    <%= f.label :neighborhood_id %><br>
    <%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name) %><br>
    <br>
    <%= f.submit "Edit Profile" %>
    <% end %>
